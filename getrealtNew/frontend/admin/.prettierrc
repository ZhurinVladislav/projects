{
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.jsx", "*.tsx"],
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "arrowParens": "avoid",
        "printWidth": 200
      }
    },
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "arrowParens": "avoid",
        "printWidth": 200
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "singleAttributePerLine": false,
        "embeddedLanguageFormatting": "off",
        "bracketSameLine": true,
        "jsxBracketSameLine": true
      }
    }
  ]
}
